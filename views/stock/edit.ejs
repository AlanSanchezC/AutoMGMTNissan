<link rel="stylesheet" type="text/css" href="/css/style.css" />
<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>
 
<% if (messages.success) { %>
    <p style="color:green"><%- messages.success %></p>
<% } %>
 
<form action="/stocks/edit/<%= id_stock %>/<%= id_vehicle_model %>" method="POST" name="form1">
    <table width="25%" border="0">
        <tr> 
            <td>Cantidad</td>
            <td><input type="text" name="cantidad" value="<%= cantidad %>" /></td>
        </tr>
        <tr>
            <td>Modelo</td>
            <td><input type="text" name="model" value="<%= model %>" /></td>
        </tr>
        <tr> 
            <td>Detalles</td>
            <td><input type="text" name="details" value="<%= details %>" /></td>
        </tr>
        <tr> 
            <td>Costo</td>
            <td><input type="text" name="cost" value="<%= cost %>" /></td>
        </tr>
        <tr> 
            <td><input type="submit" name="Submit" value="Guardar" /></td>
        </tr>
    </table>
    <input type="hidden" name="_method" value="PUT" />
</form>
 
