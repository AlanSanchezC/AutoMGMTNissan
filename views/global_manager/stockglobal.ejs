
<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>
 
<% if (messages.success) { %>
    <p style="color:green"><%- messages.success %></p>
<% } %>    

<div id="agregarVehiculoEnStockGlobal" class="modal" >
  <!-- Modal content -->
  <div class="modal-content" style="width: 420px;">
    <span class="close" onclick="cerrarDialogo()">&times;</span>
    <iframe src="/vehicles/s/add" id="aVSG" width="400px;" height="270px;"></iframe>
  </div>
</div>

<div id="editarVehiculosStockGlobal" class="modal" >
  <!-- Modal content -->
  <div class="modal-content" style="width: 420px;">
    <span class="close" onclick="cerrarDialogo()">&times;</span>
    <iframe src="" id="eVSG" width="400px;" height="270px;"></iframe>
  </div>
</div>
<br><br>
<h3 class="subtitulo"> STOCK GLOBAL </h3>

<button class="agregar" id="nuevoVSG">Agregar vehículo</button>
<br><br>
    <% if (stockGlobal) { %>
    <div class="todosLosItems">
    <% stockGlobal.forEach(function(vehiculo){ %>
        <div class="lista"  border=0>
            <table class="fit"> <tr><td>
                <label class="nombreStockGlobal"> <%= vehiculo.model %> </label>
                <button style="background-color: white;" class="edit" onclick="editarVehiculo(this)" id="<%= vehiculo.id_vehicle_model %>" value="<%= vehiculo.id_vehicle_model %>"> Editar
                </button>
                <br>
                Descripción: <%= vehiculo.details%> <br>
                Costo: $ <%= vehiculo.cost %><br>
                <label class="cantidadTotal"> Cantidad: <%= vehiculo.cantidadTotal %> </label>
            </td></tr></table>
        </div>
    <% }) %>
    </div>
    <% } %>
</table>

<script>
    var agregarVSG = document.getElementById('agregarVehiculoEnStockGlobal');
    var editarVSG = document.getElementById('editarVehiculosStockGlobal');

    var span = document.getElementsByClassName("close")[0];
    var addVSG = document.getElementById("nuevoVSG");

    // When the user clicks the button, open the agregarVSG 
    addVSG.onclick = function() {
        agregarVSG.style.display = "block";
    }


    function editarVehiculo(vehiculo){
       document.getElementById('eVSG').src = "/vehicles/edit/" + vehiculo.value;
        editarVSG.style.display = "block"
    }

    window.onclick = function(event) {
    if (event.target == agregarVSG) {
        agregarVSG.style.display = "none";
    }
    if (event.target == editarVSG) {
        editarVSG.style.display = "none";
    }
} 
</script>