<!--
including header content which is common for all pages
-->   
 <link rel="stylesheet" type="text/css" href="/css/style.css" />
<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>
 
<% if (messages.success) { %>
    <p style="color:green"><%- messages.success %></p>
<% } %>
<center>
<h2> Ingrese los datos del cliente </h2><br>
<form action="/customers/add/<%= id_seller %>" method="post" name="form1">
    <table width="70%" border="0">
        <tr> 
            <td>Nombre</td>
            <td><input type="text" name="name" id="name" value="<%= name %>" /></td>
        </tr>
        <tr> 
            <td>Apellidos</td>
            <td><input type="text" name="lastname" value="<%= lastname %>" /></td>
        </tr>
        <tr> 
            <td>Teléfono</td>
            <td><input type="text" name="phone" value="<%= phone %>" /></td>
        </tr>
        <tr> 
            <td>Dirección</td>
            <td><input type="text" name="address" value="<%= address %>" /></td>
        </tr>
        <tr> 
            <td>Municipio</td>
            <td><input type="text" name="city" value="<%= city %>" /></td>
        </tr>
        <tr> 
            <td>Estado</td>
            <td><input type="text" name="state" value="<%= state %>" /></td>
        </tr>

        <tr> 
            <td>Código postal</td>
            <td><input type="text" name="postal_code" value="<%= postal_code %>" /></td>
        </tr>
        <tr> 
            <td>País</td>
            <td><input type="text" name="country" value="<%= country %>" /></td>
        </tr>
        <tr> 
            <td colspan="2" align="center"><input type="submit" name="Submit" value="Agregar" /></td>
        </tr>
    </table>
</form>
 
